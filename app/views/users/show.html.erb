<div class="max-w-4xl mx-auto">
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-2xl font-bold"><%= @user.name %></h1>
      <% if current_user == @user %>
        <%= link_to "Edit Profile", edit_user_path(@user), class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded text-sm" %>
      <% end %>
    </div>
    
    <div class="text-gray-600 mb-4">
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Joined:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
      <p><strong>Posts:</strong> <%= @user.posts.count %></p>
    </div>
  </div>
  
  <% if @posts.any? %>
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-bold mb-4">Posts by <%= @user.name %></h2>
      
      <div class="space-y-4">
        <%= render partial: "posts/post", collection: @posts %>
      </div>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-6 text-center text-gray-500">
      <p>No posts yet.</p>
      <% if current_user == @user %>
        <p class="mt-2"><%= link_to "Create your first post", new_post_path, class: "text-blue-500 hover:underline" %>!</p>
      <% end %>
    </div>
  <% end %>
</div>