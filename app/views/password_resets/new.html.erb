<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center">Reset Password</h1>
  
  <p class="mb-4 text-gray-600">Enter your email address and we'll send you a link to reset your password.</p>
  
  <%= form_with(url: password_resets_path, method: :post) do |form| %>
    <div class="mb-6">
      <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
    </div>
    
    <div class="flex items-center justify-between">
      <%= form.submit "Send Reset Link", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Back to login", login_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>
